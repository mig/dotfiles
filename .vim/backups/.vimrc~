if has('autocmd')
    autocmd BufNewFile * silent! 0r $HOME/.vim/templates/%:e.tpl
endif

set mouse=""

if has("vms")
  set nobackup
else
  set backup
  set backupdir=~/.vim/backups,/tmp
endif

colors molokai
set number

set smartindent
set tabstop=4
set shiftwidth=4
set expandtab

" highlighting tabs, trailing white space and non braking spaces
" if &term !=# "linux"
"     set list listchars=tab:\➜\ ,trail:·,nbsp:-
" endif
